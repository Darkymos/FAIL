var solution = 42;
var tries = 0;

while (true) {
	tries++;
	var guess = input("Guess a number: ");

	if (solution == guess) {
		log("You won!");
		log("You needed a total of " + tries + " tries to guess the right number.");
		break;
	}
	else if (guess > solution) {
		log("You guessed to high!");
	} else {
		log("You guessed to low!");
	}
	
	log("\n--- Next try! ---\n\n")
}
